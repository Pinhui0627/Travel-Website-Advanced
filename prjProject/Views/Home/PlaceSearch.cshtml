
@{
    ViewBag.Title = "景點查詢";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<center>
    <h2>景點查詢</h2>
    <form action="@Url.Action("PlaceSearch")" method="post">
        <div class="form-horizontal">
            <hr />
            <div class="form-group form-inline">
                <label for="country">國家名稱：</label>
                <select class="form-control" id="country" name="country">
                    <option value="法國">法國</option>
                    <option value="美國">美國</option>
                    <option value="新加坡">新加坡</option>
                    <option value="日本">日本</option>
                    <option value="澳洲">澳洲</option>
                    <option value="台灣">台灣</option>
                </select>
            </div>
            <div class="form-group form-inline">
                <label for="placename">景點名稱：</label>
                <input type="text" class="form-control" id="placename" name="placename" required />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" value="查詢" />
                @ViewBag.Message
            </div>
        </div>
        <hr>
        @{
            if (ViewBag.Name != null)
            {
                <div class="panel panel-warning">
                    <div class="panel-heading">@ViewBag.Country</div>
                    <div class="panel-body collapse in">
                        <div class="row">
                            <div class="col-md-7">
                                <p class="lead"> <font color="#8B0000"><b><h3>@ViewBag.Name</h3></b></font></p>
                                <font color="#8B1C62">
                                    @ViewBag.Content
                                </font>
                            </div>
                            <div class="col-md-5">
                                <img src="~/image/@ViewBag.Image" class="img-responsive">
                            </div>
                        </div>
                    </div>
                </div>
            }
        }
    </form>
</center>